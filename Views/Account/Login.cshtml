@model WebBaiGiang_CKC.Models.LoginRequest
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null; // ẩn header/footer
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IT Learn</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap & Notyf -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">

    <style>
        :root {
            --brand: #0f6fa6;
            --muted: #6b7280;
        }

        html, body {
            height: 100%
        }

        body {
            margin: 0;
            font-family: system-ui, -apple-system, "Segoe UI", Roboto, Arial, sans-serif;
            background: #f5f7fb;
        }

        /* Khung giữa màn hình */
        .wrap {
            min-height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        /* Card đăng nhập đơn giản */
        .card-login {
            width: 100%;
            max-width: 420px;
            background: #fff;
            border: 1px solid #eef2f7;
            border-radius: 14px;
            box-shadow: 0 10px 24px rgba(17,24,39,.06);
            padding: 24px 22px;
        }

        .brand-top {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 8px;
        }

            .brand-top img {
                height: 28px
            }

            .brand-top b {
                font-size: 18px
            }

        .subtitle {
            color: var(--muted);
            font-size: .925rem;
            margin-bottom: 18px
        }

        .form-label {
            font-weight: 600;
            font-size: .95rem
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 12px;
            border: 1px solid #e5e7eb;
        }

            .form-control:focus {
                border-color: var(--brand);
                box-shadow: 0 0 0 .2rem rgba(15,111,166,.15);
            }

        .btn-brand {
            display: inline-block;
            width: 100%;
            background: var(--brand);
            color: #fff;
            border: none;
            font-weight: 700;
            border-radius: 10px;
            padding: .8rem 1rem;
        }

            .btn-brand:hover {
                filter: brightness(1.04)
            }

        .bottom-help {
            margin-top: 12px;
            text-align: center;
            color: var(--muted);
            font-size: .9rem;
        }
    </style>
</head>
<body>

    <div class="wrap">
        <div class="card-login">
            <!-- Logo + tên -->
            <div class="brand-top">
                <img src="~/assets/images/icon.png" alt="IT Learn">
                <b>IT LEARN</b>
            </div>

            <!-- Form -->
            <form asp-action="Login" method="post" autocomplete="on">
                <div class="mb-3">
                    <label class="form-label">Tên đăng nhập</label>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Nhập tên đăng nhập" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Nhập mật khẩu" required />
                </div>
                <button type="submit" class="btn btn-brand">Đăng nhập</button>
            </form>

            <div class="bottom-help">
                Quên mật khẩu? Liên hệ quản trị viên để được hỗ trợ.
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
    <script>
        const notyf = new Notyf({ duration: 3000, position: { x: 'right', y: 'top' } });
        @if (TempData["Error"] != null)
        {
            <text>notyf.error("@TempData["Error"]"); </text>
        }
    </script>
</body>
</html>
