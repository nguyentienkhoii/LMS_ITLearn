@model WebBaiGiang_CKC.Models.Bai
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lop  = Model.Chuong?.LopHoc;
    var khoa = lop?.KhoaHoc;
    var gv   = lop?.GiangVien;
    var soMuc = (int)(ViewBag.CountMuc ?? 0);
    var soBT  = (int)(ViewBag.CountBaiTap ?? 0);
}

<ol class="breadcrumb">
  <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
  <li class="breadcrumb-item"><a asp-controller="Bai" asp-action="Index">Quản lý bài học</a></li>
  <li class="breadcrumb-item active">Xem chi tiết</li>
</ol>

<h1 class="text-center">XEM CHI TIẾT BÀI HỌC</h1>
<hr />

<!-- Thẻ thông tin tổng quan -->
<div class="card border-0 shadow-sm mb-3">
  <div class="card-header bg-light d-flex justify-content-between align-items-center">
    <strong>Thông tin lớp & chương</strong>
    @* <div>
      <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@Model.BaiId">
        <i class="mdi mdi-square-edit-outline me-1"></i>Sửa
      </a>
      <a class="btn btn-secondary btn-sm" asp-action="Index">
        <i class="mdi mdi-arrow-left me-1"></i>Quay lại
      </a>
    </div> *@
  </div>
  <div class="card-body">
    <div class="row g-3 align-items-start">
      <div class="col-md-8">
        <dl class="row mb-0">
          <dt class="col-sm-4">Lớp học</dt>
          <dd class="col-sm-8">
            @if (lop != null) {
              @lop.TenLopHoc
              @if (!string.IsNullOrEmpty(lop.TenVietTat)) { <span class="text-muted">(@lop.TenVietTat)</span> }
            } else { <span class="text-muted">—</span> }
          </dd>

          <dt class="col-sm-4">Trạng thái lớp</dt>
          <dd class="col-sm-8">@((lop?.TrangThai) ?? "—")</dd>

          <dt class="col-sm-4">Khoá học</dt>
          <dd class="col-sm-8">@((khoa?.TenKhoaHoc) ?? "—")</dd>

          <dt class="col-sm-4">Giảng viên</dt>
          <dd class="col-sm-8">@((gv?.HoTen) ?? "—")</dd>

          <dt class="col-sm-4">Chương</dt>
          <dd class="col-sm-8">
            @Model.Chuong?.TenChuong <span class="text-muted">(Mã: @Model.MaChuong)</span>
          </dd>
        </dl>
      </div>
      <div class="col-md-4 text-center">
        @if (!string.IsNullOrEmpty(lop?.AnhLopHoc)) {
          <img src="@lop.AnhLopHoc" class="img-fluid rounded border" alt="Ảnh lớp" />
        } else {
          <div class="border rounded p-4 text-muted">Không có ảnh lớp</div>
        }
      </div>
    </div>
  </div>
</div>

<!-- Thẻ thông tin bài -->
<div class="card border-0 shadow-sm mb-3">
  <div class="card-header bg-light">
    <strong>Thông tin bài học</strong>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-6">
        <dl class="row mb-0">
          <dt class="col-sm-4">Mã bài</dt>
          <dd class="col-sm-8">@Model.BaiId</dd>

          <dt class="col-sm-4">Tên bài</dt>
          <dd class="col-sm-8">@Model.TenBai</dd>

          <dt class="col-sm-4">Bài số</dt>
          <dd class="col-sm-8">@Model.SoBai</dd>
        </dl>
      </div>
      <div class="col-md-6">
        <div class="d-flex gap-2 flex-wrap">
          <span class="badge bg-primary p-2">Số mục: <strong>@soMuc</strong></span>
          <span class="badge bg-info text-dark p-2">Số bài tập: <strong>@soBT</strong></span>
        </div>
      </div>
    </div>

    <hr class="my-3" />

    <div>
      <div class="fw-semibold mb-1">Mô tả / Nội dung</div>
      <div class="border rounded p-3">
        @* Nếu MoTa lưu HTML từ Summernote: nên render Raw (nội bộ admin/giảng viên) *@
        @Html.Raw(Model.MoTa)
        @* Nếu muốn an toàn hơn, thay vì Raw có thể sanitize trước khi lưu/hiện *@
      </div>
    </div>
  </div>
  <div class="card-footer bg-white d-flex gap-2">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BaiId">
      <i class="mdi mdi-square-edit-outline me-1"></i>Sửa
    </a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
  </div>
</div>
