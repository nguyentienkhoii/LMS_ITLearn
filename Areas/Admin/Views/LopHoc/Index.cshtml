@model IEnumerable<WebBaiGiang_CKC.Models.LopHoc>

@{
    ViewData["Title"] = "Danh sách lớp học";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- 🧭 Breadcrumb -->
<ol class="breadcrumb mt-3">
    <li class="breadcrumb-item">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a>
    </li>
    <li class="breadcrumb-item active">Quản lý lớp học</li>
</ol>

<!-- 📘 Danh sách lớp học -->
<div class="card shadow-sm">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">
            <i class="fa-solid fa-users"></i> Danh sách lớp học
        </h4>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="fa fa-plus"></i> Thêm mới
        </a>
    </div>

    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th style="width: 60px;">Mã</th>
                        <th>Tên lớp</th>
                        <th>Khóa học</th>
                        <th>Giảng viên</th>
                        <th>Trạng thái</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">@item.MaLopHoc</td>
                            <td>
                                <a asp-action="ChiTiet" asp-route-id="@item.MaLopHoc" class="text-decoration-none fw-semibold text-primary">
                                    @item.TenLopHoc
                                </a>
                            </td>
                            <td>@item.KhoaHoc?.TenKhoaHoc</td>
                            <td>@item.GiangVien?.HoTen</td>
                             @* @functions{
                                string AdminBadge(TrangThaiLopHoc st) => st switch
                                {
                                    TrangThaiLopHoc.DangHoatDong => "badge bg-success",
                                    TrangThaiLopHoc.DaKetThuc    => "badge bg-secondary",
                                    _                            => "badge bg-warning text-dark"
                                };
                                string AdminText(TrangThaiLopHoc st) => st switch
                                {
                                    TrangThaiLopHoc.DangHoatDong => "Đang mở",
                                    TrangThaiLopHoc.DaKetThuc    => "Đã đóng",
                                    _                            => "Chưa hoạt động"
                                };
                            } *@

                            <td class="text-center">
                            @* <span class="@AdminBadge(item.TrangThai)">@AdminText(item.TrangThai)</span> *@
                             @if (item.TrangThai?.ToLower() == "đang mở" || item.TrangThai?.ToLower() == "mở")
                                {
                                    <span class="badge bg-success">Đang mở</span>
                                }
                                else if (item.TrangThai?.ToLower() == "đã đóng")
                                {
                                    <span class="badge bg-secondary">Đã đóng</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">@item.TrangThai</span>
                                } 
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="ChiTiet" asp-route-id="@item.MaLopHoc"
                                       class="btn btn-info text-white" title="Chi tiết lớp học">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MaLopHoc"
                                       class="btn btn-warning" title="Chỉnh sửa">
                                        <i class="fa fa-pen"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaLopHoc"
                                       class="btn btn-danger" title="Xóa">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fa fa-circle-info"></i> Hiện chưa có lớp học nào trong hệ thống.
            </div>
        }
    </div>
</div>

<!-- ⚡ Optional: Tùy chọn JS thêm nhỏ -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Highlight hàng khi rê chuột
            document.querySelectorAll("table tr").forEach(tr => {
                tr.addEventListener("mouseenter", () => tr.classList.add("table-active"));
                tr.addEventListener("mouseleave", () => tr.classList.remove("table-active"));
            });
        });
    </script>
}
