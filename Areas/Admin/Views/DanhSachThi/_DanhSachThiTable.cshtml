@model IEnumerable<WebBaiGiang_CKC.Models.DanhSachThi>

<table class="table table-bordered align-middle">
    <thead class="table-light text-center">
        <tr>
            <th>Mã HV</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Số câu đúng</th>
            <th>Điểm</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr class="text-center">
                <td>@item.MaHocVien</td>
                <td class="text-start">@item.HocVien?.HoTen</td>
                <td>@item.HocVien?.Email</td>
                <td>@item.SoCauDung</td>
                <td>@String.Format("{0:0.0}", item.Diem)</td>
                <td>
                    @if (item.TrangThai == true)
                    { <span class="badge bg-success">Đã làm</span> }
                    else
                    { <span class="badge bg-secondary">Chưa làm</span> }
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="6" class="text-center text-muted">Chưa có học viên nào trong kỳ thi này.</td></tr>
    }
    </tbody>
</table>
