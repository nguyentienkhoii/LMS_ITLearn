@model WebBaiGiang_CKC.Models.De

@{
    ViewData["Title"] = "Thêm đề thi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var dsLop = ViewBag.LopHoc as IEnumerable<WebBaiGiang_CKC.Models.LopHoc> ?? new List<WebBaiGiang_CKC.Models.LopHoc>();
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="De" asp-action="Index">Quản lý đề</a></li>
    <li class="breadcrumb-item active">Thêm</li>
</ol>

<h2 class="text-center mb-4">THÊM ĐỀ THI</h2>
<hr />

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Kỳ kiểm tra -->
    <div class="form-group mx-4 mb-3">
        <label asp-for="KyKiemTraId" class="fw-bold">Kỳ kiểm tra</label>
        <select asp-for="KyKiemTraId" class="form-select" asp-items="ViewBag.KyKiemTraId" id="KyKiemTraSelect">
            <option value="">-- Chọn kỳ kiểm tra --</option>
        </select>
    </div>

    <!-- Lớp học -->
    <div class="form-group mx-4 mb-3">
        <label class="fw-bold">Lớp học</label>
        <select id="LopHocSelect" class="form-select">
            <option value="">-- Chọn lớp học --</option>
            @foreach (var lop in dsLop)
            {
                <option value="@lop.MaLopHoc">@lop.TenLopHoc</option>
            }
        </select>
    </div>

    <!-- Số câu hỏi -->
    <div class="form-group mx-4 mb-3">
        <label asp-for="SoCauHoi" class="fw-bold">Tổng số câu hỏi</label>
        <input asp-for="SoCauHoi" type="number" class="form-control" id="SoCauHoi" min="1" required />
        <span asp-validation-for="SoCauHoi" class="text-danger"></span>
    </div>

    <!-- Độ khó -->
    <div class="form-group mx-4 mb-4">
        <label asp-for="DoKhoDe" class="fw-bold">Độ khó</label>
        <input asp-for="DoKhoDe" class="form-control" required />
        <span asp-validation-for="DoKhoDe" class="text-danger"></span>
    </div>

    <!-- Bảng nhập câu hỏi -->
    <div class="mx-4">
        <h5 class="fw-bold">Phân bổ số câu hỏi theo từng chương</h5>
        <table class="table table-bordered mt-3">
            <thead class="table-light">
                <tr>
                    <th>Chương</th>
                    <th>Số câu hỏi hiện có</th>
                    <th>Số câu muốn chọn</th>
                </tr>
            </thead>
            <tbody id="ChuongTableBody">
                <tr><td colspan="3" class="text-muted text-center">Vui lòng chọn lớp học để hiển thị chương</td></tr>
            </tbody>
        </table>
    </div>

    <!-- Nút -->
    <div class="form-group mx-4 mt-4">
        <button type="submit" class="btn btn-primary">Thêm</button>
        <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    </div>
</form>

@section scripts {
    <script>
        let danhSachChuong = [];

        // Khi chọn lớp học → gọi danh sách chương
        $('#LopHocSelect').on('change', function () {
            const maLop = $(this).val();
            $('#ChuongTableBody').html('<tr><td colspan="3" class="text-center text-muted">Đang tải...</td></tr>');

            if (!maLop) {
                $('#ChuongTableBody').html('<tr><td colspan="3" class="text-center text-muted">Vui lòng chọn lớp học để hiển thị chương</td></tr>');
                return;
            }

            $.ajax({
                url: '/Admin/De/LayDanhSachChuongTheoLop',
                type: 'GET',
                data: { maLop: maLop },
                success: function (data) {
                    danhSachChuong = data;
                    let html = '';
                    if (data.length === 0) {
                        html = '<tr><td colspan="3" class="text-center text-muted">Không có chương nào có câu hỏi trong lớp này.</td></tr>';
                    } else {
                        data.forEach(chuong => {
                            html += `
                                                <tr>
                                                    <td>${chuong.tenChuong}</td>
                                                    <td>${chuong.soLuongCauHoi ?? 0}</td>
                                                    <td>
                                                        <input type="number"
                                                               name="CauHoiChuong${chuong.maChuong}"
                                                               class="form-control"
                                                               min="0"
                                                               max="${chuong.soLuongCauHoi ?? 0}"
                                                               value="0" />
                                                    </td>
                                                </tr>`;
                        });
                    }
                    $('#ChuongTableBody').html(html);
                },
                error: function () {
                    $('#ChuongTableBody').html('<tr><td colspan="3" class="text-center text-danger">Không thể tải danh sách chương.</td></tr>');
                }
            });
        });
    </script>
}
