@model WebBaiGiang_CKC.Areas.Admin.Controllers.HocVienTaiKhoanVM

@{
    ViewData["Title"] = "Thêm học viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="HocVien" asp-action="Index">Quản lý học viên</a></li>
    <li class="breadcrumb-item active">Thêm</li>
</ol>

<div class="card shadow-sm mt-3">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fa fa-user-plus"></i> Thêm học viên mới</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h5 class="fw-bold text-primary mt-3 mb-2">Thông tin tài khoản</h5>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="TenDangNhap" class="form-label">Tên đăng nhập</label>
                    <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" required />
                    <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                    <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu" required />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
            </div>

            <h5 class="fw-bold text-success mt-4 mb-2">Thông tin học viên</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="HoTen" class="form-label">Họ và tên</label>
                    <input asp-for="HoTen" class="form-control" placeholder="Họ tên học viên" required />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SoDienThoai" class="form-label">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" placeholder="Địa chỉ" />
                </div>
            </div>

            <div class="text-end mt-4">
                <a asp-action="Index" class="btn btn-secondary me-2"><i class="fa fa-arrow-left"></i> Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu học viên</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
