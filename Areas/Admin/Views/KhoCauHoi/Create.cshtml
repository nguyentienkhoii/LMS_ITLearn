@model WebBaiGiang_CKC.Models.CauHoi

@{
    ViewData["Title"] = "Thêm câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="KhoCauHoi" asp-action="Index">Quản lý câu hỏi</a></li>
    <li class="breadcrumb-item active">Thêm</li>
</ol>

<h1 class="text-center mb-4">THÊM CÂU HỎI</h1>

<div class="row">
    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- ✅ Chọn lớp học -->
        <div class="form-group flex-grow-1 mx-4">
            <label class="form-label fw-bold">Lớp học</label>
            <select id="LopHocSelect" asp-items="ViewBag.LopHoc" class="form-select">
                <option value="">-- Chọn lớp học --</option>
            </select>
        </div>

        <!-- ✅ Chọn chương (lọc theo lớp) -->
        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="MaChuong" class="form-label fw-bold">Chương</label>
            <select asp-for="MaChuong" asp-items="ViewBag.MaChuong" id="ChuongSelect" class="form-select">
                <option value="">-- Chọn chương học --</option>
            </select>
            <span asp-validation-for="MaChuong" class="text-danger"></span>
        </div>

        <!-- Nội dung câu hỏi -->
        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="NoiDung" class="control-label fw-bold">Nội dung câu hỏi</label>
            <textarea id="htmlelementid" asp-for="NoiDung" class="form-control" style="height: 300px;"></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>

        <!-- Đáp án -->
        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="DapAnA" class="control-label fw-bold"></label>
            <input asp-for="DapAnA" class="form-control" />
            <span asp-validation-for="DapAnA" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="DapAnB" class="control-label fw-bold"></label>
            <input asp-for="DapAnB" class="form-control" />
            <span asp-validation-for="DapAnB" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="DapAnC" class="control-label fw-bold"></label>
            <input asp-for="DapAnC" class="form-control" />
            <span asp-validation-for="DapAnC" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="DapAnD" class="control-label fw-bold"></label>
            <input asp-for="DapAnD" class="form-control" />
            <span asp-validation-for="DapAnD" class="text-danger"></span>
        </div>

        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="DapAnDung" class="control-label fw-bold"></label>
            <input asp-for="DapAnDung" class="form-control" placeholder="Ví dụ: A, B, C hoặc D" />
            <span asp-validation-for="DapAnDung" class="text-danger"></span>
        </div>

        <!-- Độ khó -->
        <div class="form-group flex-grow-1 mx-4 mt-3">
            <label asp-for="DoKho" class="control-label fw-bold">Độ khó (1-5)</label>
            <input asp-for="DoKho" class="form-control" type="number" min="1" max="5" />
            <span asp-validation-for="DoKho" class="text-danger"></span>
        </div>

        <!-- Nút -->
        <div class="form-group flex-grow-1 mx-4 mt-4">
            <button type="submit" class="btn btn-primary">Thêm</button>
            <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Summernote editor
            $('#htmlelementid').summernote({
                height: 300,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['fontsize', ['fontsize']],
                    ['fontname', ['fontname']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']],
                ],
            });

            // ✅ Khi chọn lớp → load danh sách chương
            $('#LopHocSelect').on('change', function () {
                var maLop = $(this).val();
                var chuongSelect = $('#ChuongSelect');

                chuongSelect.empty();
                chuongSelect.append('<option value="">-- Chọn chương học --</option>');

                if (maLop) {
                    $.ajax({
                        url: '/Admin/KhoCauHoi/GetChuongByLop',
                        type: 'GET',
                        data: { maLop: maLop },
                        success: function (data) {
                            if (data && data.length > 0) {
                                $.each(data, function (i, item) {
                                    chuongSelect.append(`<option value="${item.maChuong}">${item.tenChuong}</option>`);
                                });
                            } else {
                                chuongSelect.append('<option value="">Không có chương nào</option>');
                            }
                        },
                        error: function () {
                            alert('Không thể tải danh sách chương.');
                        }
                    });
                }
            });
        });
    </script>
}
