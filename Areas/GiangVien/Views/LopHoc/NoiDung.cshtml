            transform: scale(1.02);
        }

        /* Overlay gradient */
        .course-banner .banner-overlay {
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, rgba(0, 64, 152, 0.8), rgba(0, 110, 255, 0.4));
        } *@

        /* Tiêu đề hiển thị trên banner */
        .course-banner .banner-title {
            position: absolute;
            left: 25px;
            bottom: 20px;
        }

        /* Nút chỉnh sửa */
        .course-banner button {
            border-radius: 20px;
            font-weight: 500;
            background-color: #ffffffd9;
            color: #126f9a;
            border: none;
            transition: all 0.2s ease;
        }

            .course-banner button:hover {
                background-color: #126f9a;
                color: #fff;
