/* ======================= */
.modal-content {
    border-radius: 12px;
    border: none;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
    overflow: hidden;
    animation: fadeInUp 0.25s ease;
}

.modal-header {
    background-color: #126f9a;
    color: #fff;
    border-bottom: none;
    padding: 16px 20px;
    font-weight: 600;
}

.modal-header .modal-title {
    font-size: 1.1rem;
    font-weight: 600;
}

.modal-header .btn-close {
    filter: invert(1);
    opacity: 0.9;
}
.modal-header .btn-close:hover {
    opacity: 1;
}

/* Nút trong footer */
.modal-footer {
    border-top: none;
    background-color: #f8f9fb;
    border-radius: 0 0 12px 12px;
    padding: 14px 18px;
}

/* Nút chính */
.modal-footer .btn-primary {
    background-color: #126f9a;
    border-color: #126f9a;
    font-weight: 600;
    border-radius: 8px;
    padding: 8px 16px;
    transition: all 0.2s ease;
}
.modal-footer .btn-primary:hover {
    background-color: #126f9a;
}

/* Nút phụ */
.modal-footer .btn-secondary {
    background-color: #fff;
    color: #333;
    border: 1px solid #ced4da;
    border-radius: 8px;
    padding: 8px 16px;
    font-weight: 500;
    transition: all 0.2s ease;
}
.modal-footer .btn-secondary:hover {
    background-color: #e9ecef;
}

/* Animation mượt */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
/* Nút hành động lớn, hiện đại */
.action-btn {
    font-weight: 600;
    border-radius: 10px;
    padding: 10px 22px;
    font-size: 16px;
    letter-spacing: 0.3px;
    transition: all 0.25s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
}

/* Nút viền xanh: Xem tiến độ */
.btn-outline-primary.action-btn {
    background-color: #fff;
    color: #126f9a;
    border: 2px solid #126f9a;
}
.btn-outline-primary.action-btn:hover {
    background-color: #126f9a;
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(13, 110, 253, 0.3);
}

/* Nút chính: Thêm chủ đề */
.btn-primary.action-btn {
    background-color: #126f9a;
    border: 2px solid #126f9a;
    color: #fff;
}
.btn-primary.action-btn:hover {
    background-color: #0b5ed7;
    border-color: #0b5ed7;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(13, 110, 253, 0.3);
}

/* Icon spacing & smooth transition */
.action-btn i {
    font-size: 15px;
    transition: transform 0.2s ease;
}
.action-btn:hover i {
    transform: scale(1.15);
}

</style>

@section Scripts {
    <script>
        $(document).ready(function () {

            // ----- THÊM CHƯƠNG -----
            $('#formThemChuong').on('submit', function (e) {
                e.preventDefault();
                const data = {
                    MaLopHoc: $('#MaLopHoc').val(),
                    TenChuong: $('#TenChuong').val()
                };
                //if (!data.TenChuong.trim()) {
                    //notyf.warning('⚠️ Vui lòng nhập tên chương!');
                   // return;
               // }

                $.post('/GiangVien/Chuong/ThemAjax', data, function (res) {
                    if (res.success) {
                        $('#modalThemChuong').modal('hide');
                        notyf.success('Đã thêm chương mới!');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        notyf.error(res.message || ' Lỗi khi thêm chương');
                    }
                });
            });

            // ----- MỞ MODAL SỬA CHƯƠNG -----
            $(document).on('click', '.btn-sua-chuong', function (e) {
                e.preventDefault();
                $('#Sua_MaChuong').val($(this).data('id'));
                $('#Sua_TenChuong').val($(this).data('ten'));
                $('#modalSuaChuong').modal('show');
            });

            // ----- GỬI SỬA CHƯƠNG -----
            $('#formSuaChuong').on('submit', function (e) {
                e.preventDefault();
                const data = {
                    MaChuong: $('#Sua_MaChuong').val(),
                    TenChuong: $('#Sua_TenChuong').val()
                };
                $.post('/GiangVien/Chuong/SuaAjax', data, function (res) {
                    if (res.success) {
                        $('#modalSuaChuong').modal('hide');
                        notyf.success('Cập nhật chương thành công!');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        notyf.error('Không thể cập nhật chương.');
                    }
                });
            });

            // ----- XÓA CHƯƠNG -----
            $(document).on('click', '.btn-xoa-chuong', function (e) {
                e.preventDefault();
                if (!confirm('Bạn có chắc muốn xóa chương này?')) return;

                const id = $(this).data('id');
                $.post('/GiangVien/Chuong/XoaAjax', { id: id }, function (res) {
                    if (res.success) {
                        notyf.success('Đã xóa chương.');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        notyf.error(res.message || 'Xóa thất bại.');
                    }
                });
            });

            // ----- MỞ MODAL THÊM BÀI -----
            $(document).on('click', '.btn-them-bai', function (e) {
                e.preventDefault();
                const maChuong = $(this).closest('.topic-card').data('chuong-id');
                $('#Bai_MaChuong').val(maChuong);
                $('#Bai_TenBai').val('');
                $('#Bai_SoBai').val('');
                $('#Bai_MoTa').val('');
                $('#modalThemBai').modal('show');
            });

            // ----- GỬI THÊM BÀI -----
            $('#formThemBai').on('submit', function (e) {
                e.preventDefault();
                const data = {
                    MaChuong: $('#Bai_MaChuong').val(),
                    TenBai: $('#Bai_TenBai').val(),
                    SoBai: $('#Bai_SoBai').val(),
                    MoTa: $('#Bai_MoTa').val()
                };

                //if (!data.TenBai.trim()) return notyf.warning('⚠️ Vui lòng nhập tên bài!');
                //if (data.SoBai <= 0) return notyf.warning('⚠️ Số bài phải lớn hơn 0!');
                //if (!data.MoTa.trim()) return notyf.warning('⚠️ Vui lòng nhập mô tả!');

                $.post('/GiangVien/Bai/ThemAjax', data, function (res) {
                    if (res.success) {
                        $('#modalThemBai').modal('hide');
                        notyf.success('Đã thêm bài mới!');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        notyf.error(res.message || 'Lỗi khi thêm bài.');
                    }
                });
            });

            // ----- MỞ MODAL SỬA BÀI -----
            $(document).on('click', '.btn-sua-bai', function (e) {
                e.preventDefault();
                const id = $(this).data('id');

                $.get(`/GiangVien/Bai/GetById?id=${id}`, function (res) {
                    if (res.success) {
                        $('#Bai_Sua_Id').val(res.data.baiId);
                        $('#Bai_Sua_Ten').val(res.data.tenBai);
                        $('#Bai_Sua_MoTa').val(res.data.moTa);
                        $('#modalSuaBai').modal('show');
                    } else {
                        notyf.error(res.message || 'Không thể tải dữ liệu bài.');
                    }
                });
            });

            // ----- GỬI CẬP NHẬT BÀI -----
            $('#formSuaBai').on('submit', function (e) {
                e.preventDefault();
                const data = {
                    BaiId: $('#Bai_Sua_Id').val(),
                    TenBai: $('#Bai_Sua_Ten').val(),
                    MoTa: $('#Bai_Sua_MoTa').val()
                };

                if (!data.TenBai.trim() || !data.MoTa.trim()) {
                    notyf.warning('⚠️ Vui lòng nhập đủ thông tin.');
                    return;
                }

                $.post('/GiangVien/Bai/SuaAjax', data, function (res) {
                    if (res.success) {
                        $('#modalSuaBai').modal('hide');
                        notyf.success('✏️ Cập nhật bài thành công!');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        notyf.error(res.message || 'Không thể cập nhật bài.');
                    }
                });
            });

            // ----- XÓA BÀI -----
            $(document).on('click', '.btn-xoa-bai', function (e) {
                e.preventDefault();
                if (!confirm('Bạn có chắc muốn xóa bài này?')) return;

                const id = $(this).data('id');
                $.post('/GiangVien/Bai/XoaAjax', { id: id }, function (res) {
                    if (res.success) {
                        notyf.success('Đã xóa bài.');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        notyf.error(res.message || 'Không thể xóa bài.');
                    }
                });
            });

            $('#btnDoiAnh').click(() => $('#fileAnhLop').click());

        $('#fileAnhLop').on('change', function () {
            const formData = new FormData($('#formDoiAnh')[0]);
            $.ajax({
                url: '/GiangVien/LopHoc/CapNhatAnh?id=@Model.MaLopHoc',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: (res) => {
                    if (res.success) {
                        $('.banner-img').attr('src', res.path);
                        notyf.success('Ảnh đã được cập nhật!');
                    } else {
                        notyf.error(res.message);
                    }
                }
            });
        });

        });
    </script>
}


