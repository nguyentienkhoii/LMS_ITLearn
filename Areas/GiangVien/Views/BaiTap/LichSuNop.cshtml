@model IEnumerable<WebBaiGiang_CKC.Models.BaiTapNop>
@{
    Layout = "~/Areas/GiangVien/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Lịch sử nộp bài";

    var hocVien = ViewBag.HocVien as WebBaiGiang_CKC.Models.HocVien;
    var baiTap = ViewBag.BaiTap as WebBaiGiang_CKC.Models.BaiTap;
}

<div class="row">
    <!-- Sidebar -->
    <div class="col-md-2 border-end bg-white">
        @await Html.PartialAsync("~/Areas/GiangVien/Views/Shared/_SidebarGiangVien.cshtml")
    </div>

    <!-- Main -->
    <div class="col-md-10">
        <div class="container mt-4">

            <h4 class="fw-bold text-primary mb-4">
                <i class="fa fa-history"></i> Lịch sử nộp bài
            </h4>

            <div class="card shadow-sm border-0">
                <div class="card-body">

                    <!-- Header thông tin -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="fw-semibold text-secondary mb-0">
                                <i class="fa fa-user me-2"></i>Học viên:
                                <span class="text-dark">@hocVien?.HoTen</span>
                            </h5>
                            <small class="text-muted">Email: @hocVien?.Email</small><br />
                            <small class="text-muted">Bài tập: @baiTap?.TenBaiTap</small>
                        </div>

                        <a href="@Url.Action("ChamDiem", "BaiTap",
       new { area = "GiangVien", id = ViewBag.MaBaiTapNopMoiNhat })"
                           class="btn btn-secondary btn-sm mb-3">
                            <i class="fa fa-arrow-left me-1"></i> Quay lại
                        </a>

                    </div>

                    <!-- Bảng lịch sử -->
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th width="60" class="text-center">Lần</th>
                                <th width="180">File nộp</th>
                                <th width="170" class="text-center">Ngày nộp</th>
                                <th width="100" class="text-center">Điểm</th>
                                <th>Nhận xét</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-center fw-semibold">@item.LanNop</td>

                                    <td>
                                        @if (!string.IsNullOrEmpty(item.FileNop))
                                        {
                                            <a href="@item.FileNop" target="_blank"
                                               class="btn btn-sm btn-outline-success rounded-pill px-3">
                                                <i class="fa fa-download me-1"></i> Tải xuống
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Không có file</span>
                                        }
                                    </td>

                                    <td class="text-center">@item.NgayNop?.ToString("dd/MM/yyyy HH:mm")</td>

                                    <td class="text-center">
                                        @if (item.Diem.HasValue)
                                        {
                                            <span class="badge bg-success px-3 py-2">@item.Diem</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary px-3 py-2">Chưa chấm</span>
                                        }
                                    </td>

                                    <td>@item.NhanXet</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>

<style>
    .col-md-10 {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .table-hover tbody tr:hover {
        background-color: #f5faff;
        transition: 0.2s ease;
    }

    .card {
        border-radius: 10px;
    }
</style>
