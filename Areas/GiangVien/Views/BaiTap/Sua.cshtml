@model WebBaiGiang_CKC.Models.BaiTap
@{
    Layout = "~/Areas/GiangVien/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Sửa bài tập";
}

<div class="row">
    <!-- Sidebar trái -->
    <div class="col-md-2 border-end bg-white">
        @await Html.PartialAsync("~/Areas/GiangVien/Views/Shared/_SidebarGiangVien.cshtml")
    </div>

    <!-- Nội dung chính -->
    <div class="col-md-10">
        <div class="container mt-4">
            <h4 class="fw-bold text-primary mb-4">
                <i class="fa fa-edit"></i> Sửa bài tập:
                <span class="text-dark">@Model.TenBaiTap</span>
            </h4>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form asp-area="GiangVien"
                          asp-controller="BaiTap"
                          asp-action="Sua"
                          method="post"
                          enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="MaBaiTap" />
                        <input type="hidden" asp-for="BaiId" />
                        <input type="hidden" name="maLopHoc" value="@ViewBag.MaLopHoc" />

                        <!-- Tên bài tập -->
                        <div class="mb-3">
                            <label asp-for="TenBaiTap" class="form-label fw-semibold">Tên bài tập</label>
                            <input asp-for="TenBaiTap" class="form-control" placeholder="Nhập tên bài tập..." />
                            <span asp-validation-for="TenBaiTap" class="text-danger"></span>
                        </div>

                        <!-- Mô tả -->
                        <div class="mb-3">
                            <label asp-for="MoTa" class="form-label fw-semibold">Mô tả</label>
                            <textarea asp-for="MoTa" id="MoTa" class="form-control" rows="6" placeholder="Nhập mô tả hoặc nội dung bài tập..."></textarea>
                            <span asp-validation-for="MoTa" class="text-danger"></span>
                        </div>

                        <!-- Hạn nộp -->
                        <div class="mb-3">
                            <label asp-for="HanNop" class="form-label fw-semibold">Hạn nộp</label>
                            <input asp-for="HanNop" type="datetime-local" class="form-control" />
                            <span asp-validation-for="HanNop" class="text-danger"></span>
                        </div>

                        <!-- Hạn nộp muộn -->
                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="enableLate"
                                @(Model.LateSubmission != null ? "checked" : "") />
                                <label class="form-check-label fw-semibold" for="enableLate">
                                    Cho phép nộp muộn
                                </label>
                            </div>

                            <input id="LateSubmission"
                                   name="LateSubmission"
                                   type="datetime-local"
                                   class="form-control"
                                   value="@(Model.LateSubmission?.ToString("yyyy-MM-ddTHH:mm") ?? "")"
                                   style="display:@(Model.LateSubmission != null ? "block" : "none");" />
                        </div>

                        <!-- Nhắc chấm điểm -->
                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="checkbox" id="enableRemind"
                                @(Model.RemindToGrade != null ? "checked" : "") />
                                <label class="form-check-label fw-semibold" for="enableRemind">
                                    Nhắc tôi chấm điểm
                                </label>
                            </div>

                            <input id="RemindToGrade"
                                   name="RemindToGrade"
                                   type="datetime-local"
                                   class="form-control"
                                   value="@(Model.RemindToGrade?.ToString("yyyy-MM-ddTHH:mm") ?? "")"
                                   style="display:@(Model.RemindToGrade != null ? "block" : "none");" />
                        </div>

                        <!-- File đính kèm -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tệp đính kèm (nếu muốn cập nhật)</label>
                            <input type="file" name="FileUpload" class="form-control" />

                            @if (!string.IsNullOrEmpty(Model.FileDinhKem))
                            {
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="fa fa-paperclip me-1"></i> File hiện tại:
                                        <a href="@Model.FileDinhKem" target="_blank">Tải xuống</a>
                                    </small>
                                </div>
                            }
                        </div>

                        <div class="text-end mt-4">
                            <a href="@Url.Action("NoiDung", "LopHoc", new { id = ViewBag.MaLopHoc, area = "GiangVien" })"
                               class="btn btn-secondary me-2">
                                <i class="fa fa-arrow-left me-1"></i> Quay lại
                            </a>

                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.jsdelivr.net/npm/tinymce@6.7.0/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: '#MoTa',
            height: 400,
            menubar: false,
            plugins: 'lists link image table code emoticons',
            toolbar: 'undo redo | bold italic underline | bullist numlist | link image | alignleft aligncenter alignright | code emoticons',
            branding: false,
            content_style: "body { font-family: Arial, sans-serif; font-size: 14px; }",
            images_upload_url: '/GiangVien/Upload/NoiDungImage',
            automatic_uploads: true,
            images_upload_handler: function (blobInfo, progress) {
                return new Promise(function (resolve, reject) {
                    var xhr = new XMLHttpRequest();
                    xhr.open('POST', '/GiangVien/Upload/NoiDungImage');
                    xhr.onload = function () {
                        if (xhr.status !== 200) {
                            reject('Upload lỗi: ' + xhr.status); return;
                        }
                        var json = JSON.parse(xhr.responseText);
                        if (!json || typeof json.location != 'string') {
                            reject('Phản hồi không hợp lệ: ' + xhr.responseText); return;
                        }
                        resolve(json.location);
                    };
                    var formData = new FormData();
                    formData.append('file', blobInfo.blob(), blobInfo.filename());
                    xhr.send(formData);
                });
            }
        });

        // Toggle Hạn nộp muộn
        document.getElementById("enableLate").addEventListener("change", function () {
            let field = document.getElementById("LateSubmission");
            field.style.display = this.checked ? "block" : "none";
            if (!this.checked) field.value = "";
        });

        // Toggle Nhắc chấm điểm
        document.getElementById("enableRemind").addEventListener("change", function () {
            let field = document.getElementById("RemindToGrade");
            field.style.display = this.checked ? "block" : "none";
            if (!this.checked) field.value = "";
        });
    </script>
}

<style>
    .card {
        border-radius: 10px;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn {
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #126f9a;
        border-color: #126f9a;
    }

        .btn-primary:hover {
            background-color: #0d5a7d;
            border-color: #0d5a7d;
        }

    .col-md-10 {
        background-color: #f8f9fa;
        min-height: 100vh;
    }
</style>
