<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">
<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>

<!-- AngularJS -->
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>

<script>
    // Notyf
    window.notyf = new Notyf({
        duration: 3000,
        position: { x: 'right', y: 'top' },
        types: [
            { type: 'success', background: '#00b300', icon: { className: 'material-icons', tagName: 'i', text: 'check_circle', color: 'white' } },
            { type: 'error', background: '#ff4d4d', icon: { className: 'material-icons', tagName: 'i', text: 'cancel', color: 'white' } }
        ]
    });

    // AngularJS App
    var app = angular.module('myLoginApp', []);
    app.controller('LoginController', function ($scope, $http, $window) {
        $scope.login = function () {
            $http.post('/api/authentication/login', {
                TenDangNhap: $scope.tendangnhap,
                Password: $scope.password
            }).then(function (res) {
                notyf.success(res.data.message);
                $window.location.href = res.data.redirectUrl;
            }).catch(function (xhr) {
                notyf.error(xhr.data?.message || "Đăng nhập thất bại");
            });
        };
    });

    // JQuery xử lý chuyển form login/register
    $(document).ready(function () {
        $('#loginModal').on('show.bs.modal', function () {
            $('#formRegister').hide();
            $('#formLogin').show();
        });

        $('#goToRegister').click(function (e) {
            e.preventDefault();
            $('#formLogin').hide();
            $('#formRegister').fadeIn();
        });

        $('#goToLogin').click(function (e) {
            e.preventDefault();
            $('#formRegister').hide();
            $('#formLogin').fadeIn();
        });

        // Đăng ký
        $('#registerForm').submit(function (e) {
            e.preventDefault();
            const data = {
                TenDangNhap: $('#tendangnhap-register').val(),
                Password: $('#matkhau-register').val(),
                Email: $('#email-register').val(),
                HoTen: $('#hoten-register').val()
            };
            $.ajax({
                url: '/api/authentication/register',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(data),
                success: function (res) {
                    notyf.success(res.message || 'Đăng ký thành công!');
                    setTimeout(() => { window.location.href = res.redirectUrl || '/hocvien'; }, 1000);
                },
                error: function (xhr) {
                    const message = xhr.responseJSON?.message || xhr.responseText || 'Đăng ký thất bại.';
                    notyf.error(message);
                }
            });
        });
    });
</script>

