@model WebBaiGiang_CKC.Models.BaiTap

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var MonHocId = @ViewBag.MonHocId;
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="BaiTap" asp-action="Index">Quản lý bài tập</a></li>
    <li class="breadcrumb-item"><a asp-controller="BaiTap" asp-action="Create">Thêm</a></li>
</ol>

<h1 style="text-align: center;">THÊM BÀI TẬP</h1>

<hr />
<div class="row">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <br />

        <!-- Môn học -->
        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="MonHocId" class="form-label">Môn học <span id="MonHocDisplay"></span></label>
            <select asp-for="MonHocId" asp-items="MonHocId" class="form-select" onchange="showMonHocInfo(this)">
                <option value="">-- Chọn môn học --</option>
            </select>
        </div>
        <br />

        <!-- Tên bài tập -->
        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="TenBaiTap" class="control-label">Tên bài tập</label>
            <input asp-for="TenBaiTap" class="form-control w-100" />
            <span asp-validation-for="TenBaiTap" class="text-danger"></span>
        </div>
        <br />

        <!-- Nội dung bài tập -->
        <div class="form-group flex-grow-1 mx-4">
            <label asp-for="NoiDung" class="control-label" for="htmlelementid">Nội dung</label>
            <textarea id="htmlelementid" style="max-width:auto" asp-for="NoiDung" class="form-control"></textarea>
            <span asp-validation-for="NoiDung" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group flex-grow-1 mx-4">
            <input type="submit" value="Thêm" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-action="Index">Quay Lại</a>
        </div>
    </form>
</div>

@section scripts {
    <script>
        // Cấu hình plugin Summernote
        $(document).ready(function () {
            $('#htmlelementid').summernote({
                height: 700,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'underline', 'clear']],
                    ['fontsize', ['fontsize']],
                    ['fontname', ['fontname']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'video']],
                    ['view', ['fullscreen', 'codeview', 'help']],
                ],
            });
        });

        // Hàm xử lý hiển thị thông tin môn học
        function showMonHocInfo(select) {
            var MonHoc = select.value;
            if (MonHoc) {
                $.ajax({
                    url: "/Admin/BaiTap/GetMonHocInfo",
                    type: "GET",
                    data: { monHocId: MonHoc },
                    success: function (monHoc) {
                        $("#MonHocDisplay").html(monHoc.tenMonHoc + " (Môn học " + monHoc.id + ")");
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        console.log("Error: " + errorThrown);
                    }
                });
            } else {
                $("#MonHocDisplay").html("");
            }
        }
    </script>
}
