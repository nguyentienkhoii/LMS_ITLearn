@model WebBaiGiang_CKC.Models.BaiTap

@{
    ViewData["Title"] = "Xóa Bài Tập";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="BaiTap" asp-action="Index">Quản lý Bài Tập</a></li>
    <li class="breadcrumb-item active">Xóa</li>
</ol>

<style>
    h1, h3 {
        text-align: center;
    }
</style>

<h1>XÓA BÀI TẬP</h1>
<h3>Bạn có chắc chắn muốn xóa bài tập này không?</h3>

<div>
    <hr />
    <br />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MonHoc.TenMonHoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MonHoc.TenMonHoc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenBaiTap)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenBaiTap)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoiDung)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoiDung)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <div style="float: left; padding-right:10px">
            <input type="hidden" asp-for="BaiTapId" />
            <input type="submit" value="Xóa" class="btn btn-danger" />
        </div>
        <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
    </form>
</div>
