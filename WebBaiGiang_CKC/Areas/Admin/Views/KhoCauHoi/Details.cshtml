@model WebBaiGiang_CKC.Models.CauHoi

@{
    ViewData["Title"] = "Chi tiết câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="KhoCauHoi" asp-action="Index">Quản lý câu hỏi</a></li>
    <li class="breadcrumb-item active">Chi tiết</li>
</ol>

<h1 class="text-center">CHI TIẾT CÂU HỎI</h1>
<hr />

<dl class="row mt-4">
    <dt class="col-sm-2">
        Chương
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.ChuongNew.TenChuong)
    </dd>

    <dt class="col-sm-2">
        Nội dung
    </dt>
    <dd class="col-sm-10">
        @Html.Raw(Model.NoiDung)
    </dd>

    <dt class="col-sm-2">
        Đáp án A
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DapAnA)
    </dd>

    <dt class="col-sm-2">
        Đáp án B
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DapAnB)
    </dd>

    <dt class="col-sm-2">
        Đáp án C
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DapAnC)
    </dd>

    <dt class="col-sm-2">
        Đáp án D
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DapAnD)
    </dd>

    <dt class="col-sm-2">
        Đáp án đúng
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DapAnDung)
    </dd>

    <dt class="col-sm-2">
        Độ khó
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.DoKho)
    </dd>
</dl>

<div class="mt-4">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.CauHoiId">Sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</div>
