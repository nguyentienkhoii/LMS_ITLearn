@model WebBaiGiang_CKC.Models.CauHoi

@{
    ViewData["Title"] = "Xóa câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-controller="KhoCauHoi" asp-action="Index">Quản lý câu hỏi</a></li>
    <li class="breadcrumb-item active">Xóa</li>
</ol>

<style>
    h1, h3 {
        text-align: center;
    }
</style>

<h1>XÓA CÂU HỎI KHỎI KHO CÂU HỎI</h1>
<h3>Bạn có chắc chắn muốn xóa câu hỏi này không?</h3>

<div class="mt-4">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Chương
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChuongNew.TenChuong)
        </dd>

        <dt class="col-sm-2">
            Nội dung
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.NoiDung)
        </dd>

        <dt class="col-sm-2">
            Đáp án A
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnA)
        </dd>

        <dt class="col-sm-2">
            Đáp án B
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnB)
        </dd>

        <dt class="col-sm-2">
            Đáp án C
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnC)
        </dd>

        <dt class="col-sm-2">
            Đáp án D
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnD)
        </dd>

        <dt class="col-sm-2">
            Đáp án đúng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DapAnDung)
        </dd>

        <dt class="col-sm-2">
            Độ khó
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoKho)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CauHoiId" />
        <div class="mt-3">
            <button type="submit" class="btn btn-danger me-2">Xóa</button>
            <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
        </div>
    </form>
</div>
