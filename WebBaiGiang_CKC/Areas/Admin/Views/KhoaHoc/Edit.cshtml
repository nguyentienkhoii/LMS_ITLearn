@model WebBaiGiang_CKC.Models.KhoaHoc
@{
    ViewData["Title"] = "Sửa khóa học";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb mt-3">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="KhoaHoc" asp-action="Index">Quản lý khóa học</a></li>
    <li class="breadcrumb-item active">Sửa</li>
</ol>

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h4><i class="fa fa-edit"></i> Chỉnh sửa khóa học</h4>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="MaKhoaHoc" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TenKhoaHoc" class="form-label"></label>
                <input asp-for="TenKhoaHoc" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label"></label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="ThoiGianBatDau" class="form-label"></label>
                    <input asp-for="ThoiGianBatDau" class="form-control" type="date" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="ThoiGianKetThuc" class="form-label"></label>
                    <input asp-for="ThoiGianKetThuc" class="form-control" type="date" />
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-warning text-dark"><i class="fa fa-save"></i> Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>
